{
  "name": "holdimg",
  "version": "1.0.0",
  "description": "A lightweight file clipboard desktop app",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "build": {
    "appId": "com.hridaydev.holdimg",
    "productName": "holdImg",
    "files": [
      "**/*"
    ],
    "directories": {
      "output": "dist"
    },
    "win": {
      "icon": "assets/icon.ico"
    },
    "mac": {
      "icon": "assets/icon.icns"
    },
    "linux": {
      "icon": "assets/icon.png"
    }
  },
  "devDependencies": {
    "electron": "^28.3.3",
    "electron-builder": "^26.0.12"
  },
  "nsis": {
  "oneClick": true,  
  "perMachine": true, 
  "allowToChangeInstallationDirectory": true,
  "installerIcon": "assets/icon.ico"
}
}
